generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  first_name        String
  last_name         String
  email             String    @unique
  username          String
  password          String
  role              String    @default("user")
  isAdmin           Boolean   @default(false)
  status            String    @default("ok")
  comment Comment[]
}

model Comment {
  id                Int             @id @default(autoincrement())
  comment_text      String
  comment_article   Article         @relation(fields: [commentId], references: [id])
  commentId         Int
  comment_user      User            @relation(fields: [userId], references: [id])
  userId            Int
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @default(now())
}

model Article {
  id                Int             @id @default(autoincrement())
  article_title     String
  author            String
  article_summary   String
  article_text      String
  edited_by         String
  main_image        String
  edit_required     Boolean         @default(true)
  isPublished       Boolean         @default(false)
  date_published    DateTime
  date_updated      DateTime
  likes             Int             @default(0)
  comment           Comment[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @default(now())
}

model Count {
  id                      Int       @id @default(autoincrement())
  count_total             Int
  weekly_count            Int
  weekly_user_count       Int
  weekly_comment_count    Int
  weekly_likes_count      Int
  previous_weekly_count   Int
}

model Session {
  id               String           @id
  sid              String           @unique
  data             String
  expiresAt        DateTime
}